{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "namedInputs": {},
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "build:icons", "build:imports"],
      "cache": true
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["test:unit", "test:compile"],
      "cache": true
    },
    "test:compile": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test:compile": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "build:icons": {
      "cache": true,
      "inputs": [
        "{projectRoot}/dev/icons/**/*",
        "{projectRoot}/src/components/Icon/tablerMappings.yaml"
      ]
    }
  }
}
