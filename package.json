{
  "name": "@mittwald/flow-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20.11"
  },
  "scripts": {
    "build": "nx run-many --targets=build",
    "clean": "nx reset",
    "postclean": "nx run-many --targets=clean",
    "dev": "nx build:deps $@ && concurrently \"yarn watch $@\" \"yarn nx dev $@\"",
    "dev:init-githooks": "pnpm dlx simple-git-hooks",
    "format": "prettier --write '**/*.{ts,tsx,yaml,yml,json,md,mdx,js,cjs,mjs,css}'",
    "lint": "eslint .",
    "test": "nx run-many --targets=test",
    "watch": "nx watch --projects=\"$@\" --includeDependentProjects -- run nx build:deps \"$@\""
  },
  "simple-git-hooks": {
    "post-checkout": "pnpm install && pnpm clean",
    "post-merge": "pnpm install && pnpm clean",
    "pre-commit": "pnpm lint"
  },
  "dependencies": {
    "eslint-scope": "^8.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@lerna-lite/cli": "^3.12.0",
    "@lerna-lite/publish": "^3.12.0",
    "@nx/devkit": "20.4.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.13.4",
    "@types/verror": "^1.10.10",
    "@types/yieldable-json": "^2.0.2",
    "concurrently": "^9.1.2",
    "depcheck": "^1.4.7",
    "dot-prop": "^9.0.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "fs-jetpack": "^5.1.0",
    "nx": "20.4.4",
    "prettier": "^3.5.1",
    "prettier-plugin-jsdoc": "^1.3.2",
    "prettier-plugin-pkgsort": "^0.2.1",
    "prettier-plugin-sort-json": "^4.1.1",
    "react-docgen-typescript": "^2.2.2",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "verror": "^1.10.1",
    "yieldable-json": "^2.1.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "acorn": "patches/acorn.patch"
    }
  },
  "resolutions": {
    "@remote-dom/core": "1.5.1",
    "react": "^19",
    "react-dom": "^19",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  },
  "dependenciesMeta": {
    "@fortawesome/fontawesome-common-types": {
      "unplugged": true
    },
    "@fortawesome/react-fontawesome": {
      "unplugged": true
    },
    "@react-types/menu": {
      "unplugged": true
    },
    "@types/react": {
      "unplugged": true
    },
    "react-aria-components": {
      "unplugged": true
    },
    "ts-node": {
      "unplugged": true
    }
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
