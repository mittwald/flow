{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react",
    "paths": {
      "@/*": ["packages/components/src/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "types": ["vite/client"]
  },
  "exclude": ["node_modules"],
  "extends": "../../tsconfig.json",
  "include": ["types.d.ts", "**/*.ts", "**/*.tsx"]
}
