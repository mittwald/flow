{
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "allowJs": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "target": "ES2015"
  },
  "exclude": ["node_modules", "dist"],
  "extends": "../../tsconfig.json",
  "include": [
    "types.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
